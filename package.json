{
  "name": "cbt-fast",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build:css": "npx tailwindcss -i styles/tailwind.css -o apps/assets/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i styles/tailwind.css -o apps/assets/tailwind.css --watch",
    "dev:quizbuilder": "vite --config apps/quizbuilder/vite.config.ts",
    "build:quizbuilder": "vite build --config apps/quizbuilder/vite.config.ts"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "vitest": "^3.2.4",
    "vite": "^5.4.10",
    "typescript": "^5.6.3",
    "@types/node": "^22.7.5"
  }
}
