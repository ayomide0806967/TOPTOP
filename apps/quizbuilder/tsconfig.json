{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "types/**/*",
    "*.html",
    "vite.config.ts"
  ]
}
